\newcommand<>{\showcode}[5][\linewidth]{%
   \uncover#6{\tikz[remember picture]%
      \node[draw=#3, thick, fill={#2}, shape=rectangle, opacity=.5, draw opacity=1, text opacity=1,
          text width=#1-10pt, inner xsep=5pt, inner ysep=-5pt, anchor=north west] (codebox) {%
               \lstinputlisting[language={#4}]{code/#5}%
   } ;}
   %\vskip -2pt
}

\RequirePackage{xparse}
\DeclareDocumentCommand{\showshell}{ O{\linewidth} D||{\scriptsize} m m}{%
  \tikz[remember picture]%, overlay]%
     \node[draw=black, semithick, fill=Black, double=white, double distance=1pt,
         shape=rectangle, opacity=.8, draw opacity=1, text opacity=1, text width=#1-10pt, inner xsep=5pt, inner ysep=-3.5pt, outer sep=0pt, anchor=north west] {%
              \lstinputlisting[language={#3},basicstyle=\color{white}\bfseries\ttfamily#2,keywordstyle=\color{Yellow}]{code/shell/#4}%
     } ;
     %\vskip -2pt
}

